generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Users {
  id String @id @default(uuid())

  name String

  surname String

  email String @unique

  password String

  phoneNumber String

  emailValidated Boolean @default(false)

  role String

  bookings Bookings[]

  createdAt DateTime @default(now()) @db.Timestamp(6)

  updatedAt DateTime @updatedAt @db.Timestamp(6)
}

model Clients {
  id String @id @default(uuid())

  name String

  surname String

  email String @unique

  phoneNumber Int

  createdAt DateTime @default(now()) @db.Timestamp(6)

  updatedAt DateTime @updatedAt @db.Timestamp(6)
}

model Bookings {
  id String @id @default(uuid())

  reservarName String

  services String[]

  dayBook String

  hourBook String

  duration String

  Users Users? @relation(fields: [usersId], references: [id])

  usersId String?

  createdAt DateTime @default(now()) @db.Timestamp(6)

  updatedAt DateTime @updatedAt @db.Timestamp(6)
}
