generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model users {
  id String @id

  name String

  surname String

  email String @unique

  password String

  phoneNumber String

  emailValidated Boolean @default(false)

  role String

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt
}

model clients {
  id Int @id @default(autoincrement())

  name String

  surname String

  email String @unique

  phoneNumber Int

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt
}

model bookings {
  id String @id

  reserverCreator String

  reservarName String

  jobType String[]

  duration Int

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt
}
